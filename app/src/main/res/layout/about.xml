<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_small"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"/>

        <ScrollView
            android:id="@+id/about_desc"
            android:layout_below="@+id/about_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/about_text_title_size"
                    android:text="Team Members"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/about_text_size"
                    android:text="@string/about"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/about_text_title_size"
                    android:text="Library"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/about_text_size"
                    android:text="@string/library_des"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/about_share"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/about_desc"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/about_share_fb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/logo_facebook"/>

            <ImageView
                android:id="@+id/about_share_weebly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/logo_weebly"/>

            <ImageView
                android:id="@+id/about_share_twitter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/logo_twitter"/>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
